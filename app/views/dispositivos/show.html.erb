<%- model_class = Dispositivo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @dispositivo.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @dispositivo.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activo) %>:</strong></dt>
  <dd><%= @dispositivo.activo %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.volver")),
              dispositivos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_dispositivo_path(@dispositivo), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
              dispositivo_path(@dispositivo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
