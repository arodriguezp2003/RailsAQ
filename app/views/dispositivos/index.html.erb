<%- model_class = Dispositivo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:codigo) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:activo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @dispositivos.each do |dispositivo| %>
      <tr>
        <td><%= link_to dispositivo.id, dispositivo_path(dispositivo) %></td>
        <td><%= dispositivo.codigo %></td>
        <td><%= dispositivo.descripcion %></td>
        <td><%= dispositivo.activo %></td>
        <td><%=l dispositivo.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_dispositivo_path(dispositivo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
                      dispositivo_path(dispositivo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Â¿Estas Seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.nuevo")),
            new_dispositivo_path,
            :class => 'btn btn-primary' %>
