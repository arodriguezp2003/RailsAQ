<%= form_for @dispositivo, :html => { :class => "form-horizontal dispositivo" } do |f| %>

    <% if @dispositivo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@dispositivo.errors.count, "error") %> prohibited this dispositivo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @dispositivo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :codigo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :codigo, :class => 'form-control' %>
    </div>
    <%= error_span(@dispositivo[:codigo]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@dispositivo[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :activo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :activo, :class => 'form-control' %>
    </div>
    <%= error_span(@dispositivo[:activo]) %>
  </div>


  <%= f.submit "Guardar", :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),
            dispositivos_path, :class => 'btn btn-default' %>

<% end %>
